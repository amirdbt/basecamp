<% flash.each do |type,msg| %>
    <div class="alert alert-success">
        <%= msg %>
    </div>
<% end %>
<div id="w">
  <div class="card text-center w-70">
  <div class="card-body">
    <h1 class="display-4 text-center">Project -<%= @project.name %></h1>  
    <h2 class="display-4 text-center">Thread-<%= @topic.name %></h2>  
  </div>
</div>
    <div class="msb">  <%= link_to 'Message', new_user_project_topic_message_path(topic_id: @topic.id) , :class => "btn btn-primary btn-sm fa fa-plus" %> 
    <%= link_to 'Back', "/users/#{current_user.id}/projects/#{params[:project_id]}/topics",  :class => 'btn btn-outline-info btn-sm  fa fa-arrow-left' %>
    </div>
    
      
      <% if @topic.messages.length > 0 %>	
      <% @topic.messages.each do |message| %>	
            
      <div id="container mt-5 mb-3">
      <div class="row cc mt-3">
        <div class="col-md-9 ">
          <div class="author pt-3">
            <div class="avatar"><img src="data:image/png;base64," width="55" height="55" alt="DarkCubes photo avatar"></div>
            <header class="pt-3 pl-3"><%= User.find(message.user_id).firstname %> <%= User.find(message.user_id).lastname %><span class="pubdate text-muted"> - posted <%= time_ago_in_words(message.created_at) %> ago</span></header>
            
          </div>
            <p class="ml-4 pl-5"><%= message.content %></p>          
        </div>
        <div class="col-md-3">
            <%= link_to 'Edit',"#{@topic.id}/messages/#{message.id}/edit", :class => "btn btn-warning" %> 
            <%= link_to 'X', "#{@topic.id}/messages/#{message.id}", data: {confirm: "Are you sure?"}, :class => "btn btn-danger" %> 
        
        </div>
      </div>    
                                   
                
           
        <% end %>
        <% else %>
        <h1 class="display-4 text-center">No comments yet!</h1>
        <% end %>
      
    </div>
</div>